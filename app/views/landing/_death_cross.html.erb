<div class="wrapper wrapper-content animated fadeInRight">

<div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5> Death Cross </h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th> Company Name </th>
                        <th> Symbol </th>
                        <th> Date </th>
                        <th> Stock Price </th>
                        <th> Profit since last revert</th>
                    </tr>
                    </thead>
                    <tbody id='death_cross_list'>
                    <% @death_cross_stocks.each do |stock| %>
                        <tr>
                       <% equity = Stock.find(stock.stock_id) %>
                       <% require "yahoo_finance" %>
                       <% data = YahooFinance.quotes([equity.symbol], [:open, :close, :change_in_percent, :last_trade_date, :trade_date]) %>
                       <td><%= equity.name %></td>
                       <td><%= link_to equity.symbol, stock_symbol_path(equity.symbol), :target => "_blank" %></td>
                       <td><%= data[0].last_trade_date %></td>
                       <td><%= data[0].close %></td>
                       <td class="text-danger"> <i class="fa fa-level-up"></i><%= data[0].change_in_percent %> </td>
                       </tr>
                    <% end %>
                    </tbody>
                </table>
                <div id="paginator">
                    <%= paginate @death_cross_stocks, :remote => true %>
                </div>
                
            </div>
        </div>
    </div>
</div>

