<div class="wrapper wrapper-content animated fadeInRight">

<div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5> Death Cross </h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th> Company Name </th>
                        <th> Symbol </th>
                        <th> Date </th>
                        <th> Profit since last revert</th>
                    </tr>
                    </thead>
                    <tbody id='death_cross_list'>
                    <% @death_cross_stocks.each do |stock| %>
                       <tr>
                           <% equity = Stock.find(stock.stock_id) %>
                           <td><%= equity.name %></td>
                           <td><a href="<%= stock_symbol_path(equity.symbol) %>"><%= equity.symbol %></a></td>
                           <td><%= Date.today %> </td>
                           <td class="text-navy"> <i class="fa fa-level-up"></i> 40% </td>
                       </tr>
                    <% end %>
                    </tbody>
                </table>
                <div id="paginator">
                    <%= paginate @death_cross_stocks, :remote => true %>
                </div>
                
            </div>
        </div>
    </div>
</div>

